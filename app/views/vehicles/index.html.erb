<h3> Veiculos</h3> 
<div class="row" >
  <div class="col-md-3">
    <%if current_user.is_admin? %>
      <%= link_to "Cadastrar Veículo", new_vehicle_path, class:"btn btn-primary" %>
    <%end%>
  </div>
  </br>
  <div class="col-md-6">
    <%= form_with(url: search_vehicles_path, method: :get) do |f|%>
      <%= f.label :query, 'Buscar Veículo pela Placa'%>
      <%= f.text_field :query, class:'form-control-sm'%>
      <%= f.submit 'Buscar', class:'btn btn-success' %> 
    <%end%>
  </div>
</div>
<hr>
<div class="col-md-6">
  <% @vehicles.each do |t|%>
    <div>
      <ul>
        <li> <%= link_to t.plate, vehicle_path(t.id)%> </li>
        <p> Marca: <%= t.brand%> </p>
        <p> Modelo: <%= t.model%></p>
        <p> Placa: <%= t.plate%></p>
        <p>Status:  <%=  I18n.translate(t.status)%></p>
        <hr>
      </ul>
    </div>
  <%end%>
</div>

