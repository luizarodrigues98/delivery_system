
<h3> Veiculos</h3> 
<%= form_with(url: search_vehicles_path, method: :get) do |f|%>
  <%= f.label :query, 'Buscar Veículo'%>
  <%= f.text_field :query%>
  <%= f.submit 'Buscar' %> 
<%end%>
<% @vehicles.each do |t|%>
  <div>
    <ul>
      <li> <%= link_to t.plate, vehicle_path(t.id)%> </li>
      <p> Marca: <%= t.brand%> </p>
      <p> Modelo: <%= t.model%></p>
      <p>Status:  <%=  I18n.translate(t.status)%></p>

    </ul>
  </div>
<%end%>
  <div>
  <%if current_user.is_admin? %>
    <%= link_to "Cadastrar Veículo", new_vehicle_path %>
  <%end%>
  </div>

