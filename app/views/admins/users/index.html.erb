<%if current_user.is_admin? %>
<%= link_to "Novo Usuário", new_admins_user_path %>
  <h3> Usuários Regulares</h3> 
  <div class="row">
    <div class="col-md-8">
      <table id="user" style="width: 100%">
        <tr>
          <th style="width: 40%">Nome</th>
          <th style="width: 40%">Email</th>
          <th style="width: 20%"></th>
        </tr>

        <% @users.each do |user|%>
          <tr>  
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Editar", edit_admins_user_path(user.id) %>
              <%= button_to 'Elevar para Admin', admins_user_path(user), method: :put, params: { user: { admin: 'true' } } %>
              <%= button_to "Excluir", admins_user_path(user), method: :delete, data: {confirm: "Deseja realmente excluir esse usuário?"} %>
            
            </td>
          </tr>  
        <%end%>
      </table>
    </div>
  </div>
  <hr>
  <h3> Usuários Administradores</h3> 
  <div class="row">
    <div class="col-md-8">
      <table id = "admin" style="width: 100%">
        <tr>
          <th style="width: 40%">Nome</th>
          <th style="width: 40%">Email</th>
          <th style="width: 20%"></th>
        </tr>

        <% @admins.each do |user|%>
          <tr>  
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Editar", edit_admins_user_path(user.id) %>
              <%= button_to 'Transformar em regular', admins_user_path(user), method: :put, params: { user: { admin: 'false' } } %>
              <%= button_to "Excluir", admins_user_path(user), method: :delete, data: {confirm: "Deseja realmente excluir esse usuário?"} %>
            
            </td>
          </tr>  
        <%end%>
      </table>
    </div>
  </div>
<%end%>