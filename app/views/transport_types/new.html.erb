<h2>Cadastrar Modalidade de Transporte</h2>
<%if(@transport_type.errors.any?)%>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @transport_type.errors.full_messages.each do |msg|%>
      <li><%= msg %> </li>
    <%end%>
  </ul>
<%end%>

<%= form_with(model: @transport_type ) do |f| %>
  <div>
      <%= f.label :name %>
      <%= f.text_field :name%>
    </div>  
    <div>
      <%= f.label :min_distance %>
      <%= f.number_field :min_distance %>
    </div>
    <div>
      <%= f.label :max_distance %>
      <%= f.number_field :max_distance%>
    </div>  
    <div>
      <%= f.label :max_weight %>
      <%= f.number_field :max_weight%>  
    </div>
      <div>
      <%= f.label :min_weight %>
      <%= f.number_field :min_weight %>
    </div>  
    <div>
      <%= f.label :fixed_rate %>
      <%= f.number_field :fixed_rate, step: :any %>
    </div>

    <div>
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div> 
    <div>
      <%= f.submit 'Enviar' %>
    </div>
<% end %>