<%if current_user.is_admin? %>
  <h3> Usuários Regulares</h3> 
  <div class="row">
    <div class="col-md-8">
      <table style="width: 100%">
        <tr>
          <th style="width: 40%">Nome</th>
          <th style="width: 40%">Email</th>
          <th style="width: 20%"></th>
        </tr>

        <% @users.each do |user|%>
          <tr>  
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Editar", edit_user_path(user.id) %>
              <%= button_to 'Elevar para Admin', users_path(user), method: :put, params: { user: { admin: true } } %>
              <%= button_to "Excluir", users_path(user), method: :delete, data: {confirm: "Deseja realmente excluir esse usuário?"} %>
            
            </td>
          </tr>  
        <%end%>
      </table>
    </div>
  </div>
<%end%>